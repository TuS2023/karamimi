<% reviews.each do |review| %>
  <div class="text-center col-md-3 offset-md-1 pt-3">
    <% if admin_signed_in? %>
      <%= link_to admin_review_path(review.id), class:"text-reset" do %>
        <%= image_tag review.get_review_image, :style => "width:250px; height:200px;" %>
      <% end %>
    <% else %>
      <%= link_to review_path(review.id), class:"text-reset" do %>
        <%= image_tag review.get_review_image, :style => "width:250px; height:200px;" %>
      <% end %>
    <% end %>
  </div>

  <div class="col-md-6 index_right_content pt-3">
    <div>
      <%= review.title %>
    </div>
    <div>
      <h5><span>￥</span><%= review.price.to_s(:delimited) %></h5>
    </div>
    <div id="favorite_buttons_<%= review.id %>">
      <%= render 'public/favorites/btn', review: review %>
    </div>
    <div>
      コメント数： <%= review.review_comments.count %>
    </div>
    <div>
      <%= render 'public/reviews/rate', review: review %>
    </div>
    <div class="mb-3">
      <% review.categories.each do |category| %>
        <i class="fa-solid fa-tag"></i>
        <%= category.category_name %>
      <% end %>
    </div>

  </div>

<% end %>