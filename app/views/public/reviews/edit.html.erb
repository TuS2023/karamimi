<h1>編集画面</h1>
<%= form_with model: @review, url: review_path(@review.id), method: :patch do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>タイトル</h4>
    <%= f.text_field :title %>
  <h4>店名</h4>
    <%= f.text_field :store_name %>
  <h4>住所</h4>
    <%= f.text_field :address %>
  <h4>値段</h4>
    <%= f.text_field :price %>
  <h4>辛さレベル</h4>
    <%= f.text_field :score %>
  <h4>タグ</h4>
    <%= f.submit 'タグ追加' %>


  <h4>投稿内容</h4>
  <%= f.text_area :explanation %>

  <%= f.submit '保存' %>

<% end %>