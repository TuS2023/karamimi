<h1>投稿一覧</h1>
<%= link_to '投稿フォーム', new_review_path %>
<%= link_to '新しい順', reviews_path(latest: "true") %>
|<%= link_to '古い順', reviews_path(old: "true") %>
|<%= link_to '辛さレベルが高い順', reviews_path(score_count: "true") %>
|<%= link_to '値段が高い順', reviews_path(price: "true") %>

<% @reviews.each do |review| %>
  <p>タイトル</p>
    <span><%= link_to review.title, review_path(review.id) %></span>
  <%= render 'public/favorites/btn', review: review %>
  コメント数： <%= review.review_comments.count %>
  <div class="col-1 py-3">
    <% review.categories.each do |category| %>
      <%= category.category_name %>
    <% end %>
  </div>

<% end %>

