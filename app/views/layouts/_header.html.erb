<div class="container">
  <div class="row">
    <div class="col-3">
      <div class="logo pt-2">
        <%= link_to root_path do %>
          <%= image_tag 'karamimi-logo.png', :size => '100x100' %>
        <% end %>
      </div>
    </div>
      <% if admin_signed_in?%>
      <div class="mr-3 menu">
        <%= link_to "投稿一覧", admin_reviews_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "会員一覧", admin_users_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
