      <div class="mr-3 menu">
        <%= link_to "mypage", mypage_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "投稿一覧", reviews_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
    <% else %>

      <div class="mr-3 menu">
        <%= link_to "About", about_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "投稿一覧", reviews_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "新規登録", new_user_registration_path %>
      </div>
      <div class="mr-3 menu">
        <%= link_to "ログイン", new_user_session_path %>
      </div>
