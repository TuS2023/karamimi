<div class="container pt-3">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row">
    <div class="col-10 mt-5 mb-5">
      <h4><span class="col ml-4">新規会員登録</span></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto ">
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <div class="form-group row">
          <%= f.label :name, "名前", class:"col-md-3 justify-content: center" %>
          <div class="col-md-6">
            <%= f.text_field :name, class:"form-control mr-4 border border-dark", autofocus: true, :placeholder => "名前" %>
          </div>

        </div>

        <div class="form-group row">
          <%= f.label :email, "メールアドレス", class:"col-md-3 justify-content: center " %>
          <div class="col-md-6">
            <%= f.email_field :email, class:"form-control border border-dark", autofocus: true, autocomplete: "email", :placeholder => "sample@exmple.com" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, "パスワード(6文字以上)", class:"col-md-3 justify-content: center " %>
          <div class="col-md-6">
            <%= f.password_field :password, class:"form-control border border-dark", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, "パスワード(確認用)", class:"col-md-3 justify-content-start " %>
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, class:"form-control border border-dark", autocomplete: "new-password" %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-md-3 offset-md-3">
            <%= f.submit "新規登録", class:"form-control btn btn-success mt-3 px-5 py-1" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <h5><span class="col-md-3 mt-5">ゲストでログインする</span></h5>
  <div class="col-md-3 offset-md-3 mb-5">
    <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: 'form-control btn btn-secondary btn-space'%>
  </div>
  <h5><span class="col-md-6">既に登録済みの方</span></h5>
  <div class="col-md-6">
    <div class="col-md-10 mt-3">
      <span><strong><%= link_to " こちら ", new_user_session_path %>からログインしてください。</strong></span>
    </div>
  </div>
</div>
