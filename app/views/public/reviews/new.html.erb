<div class="container pt-5">
  <%= render 'layouts/errors', obj: @review %>
  <h3 class="m-5">新規投稿フォーム</h3>
  <div class="row">
    <div class="col-md-8 mx-auto my-5">
    <%= form_with model: @review do |f| %>
      <%= render 'public/reviews/form', f: f %>
      <div class="col-md-6">
        <h4>投稿内容</h4>
        <%= f.text_area :explanation, size: "50x10", class: "form-control" %>
        <%= f.submit '投稿', class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
