<div class="container mt-4">
  <h2 class="m-5">投稿詳細</h2>
  <div class="row">
    <div class="col">
      <%= image_tag @review.get_review_image, :style => "width:500px; height:450px;" %>
    </div>
    <div class="col">
      <h4>タイトル</h4>
      <p><%= @review.title %></p>

      <% @review.categories.each do |category| %>
     　  <i class="fa-solid fa-tag"></i>
     　  <%= category.category_name %>
      <% end %>

      <div class="mt-3 ml-3">
        <%= render 'public/favorites/btn', review: @review %>
        コメント数： <%= @review.review_comments.count %>
      </div>

      <h4 class="mt-3">店名</h4>
      <p><%= @review.store_name %></p>

      <h4>住所</h4>
      <p><%= @review.address %></p>

      <h4>値段</h4>
      <p><span>￥</span><%= @review.price %></p>

      <h4>辛さレベル</h4>
      <div class="form-group">
        <%= render "public/reviews/rate", review: @review %>
      </div>
    </div>
 </div>

  <div class="row">
    <div class="col mx-auto">
      <h2>投稿内容</h2>
      <p><%= @review.explanation %></p>

      <div class="col-6 form-group">
        <%= render "public/review_comments/comment", review: @review %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <% if @review.user == current_user %>
        <%= link_to "編集", edit_review_path(@review.id) %>
        <%= link_to "削除", review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
      <% elsif admin_signed_in? %>
        <%= link_to "編集", edit_admin_review_path(@review.id) %>
        <%= link_to "削除", admin_review_path(@review.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
     <% end %>
    </div>
  </div>
</div>