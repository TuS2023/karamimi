<div class="container py-5">
  <div class="row mt-2 mb-3 offset-1 text-center">
    <h2 class="col"><%= @user.name %>さんの会員詳細</h2>
  </div>
  <div class="row"></div>
    <div class="col-10 mx-auto">
      <table class="table table-list">
        <tr>
          <td>プロフィール画像</td>
          <td><span style="margin-left:150px;"><%= image_tag @user.get_profile_image,size: "100x100" %></td>
        </tr>
        <tr>
          <td>会員ID </td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.is_active == true %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">退会</p>
            <% end %>
          </td>
        </tr>
     </table>
    </div>
  </div>
  <div class="row">
    <div class="col-3 offset-4">
      <%= link_to "いいねした投稿", favorites_user_path(@user), class: "btn btn-primary" %>
    </div>
    <% if @user.email != "guest@example.com" %>
     <div class="col-3">
      <%= link_to '編集する', edit_user_path(@user), class: 'btn btn-success btn-space' %>
     </div>
    <% end %>
  </div>
</div>